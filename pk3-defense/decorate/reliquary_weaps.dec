ACTOR ReliquaryMachinegun : DoomWeapon
{
  Weapon.SelectionOrder 1900
  Weapon.AmmoUse 1
  Weapon.AmmoGive 24
  Weapon.AmmoType "Clip"
  Obituary "$OB_MPPISTOL"
  +WEAPON.WIMPY_WEAPON
  Inventory.Pickupmessage "You got a machinegun!"
  Tag "Machinegun"
  States
  {
  Ready:
    RQPG A 1 A_WeaponReady
    Loop
  Deselect:
    RQPG AAA 0 A_Lower
    RQPG A 1 A_Lower
    Loop
  Select:
    RQPG AAA 0 A_Raise
    RQPG A 1 A_Raise
    Loop
  Fire:
    RQPG A 1
    RQPG B 0 A_FireBullets(0, 0, 1, 5, "BulletPuff")
    RQPG B 0 A_PlaySound("reliquary/pistol", CHAN_WEAPON)
    RQPG B 1 A_GunFlash
    RQPG C 1
    RQPG D 1
    RQPG C 1
    RQPG B 1
    RQPG A 3 A_ReFire
    Goto Ready
  Flash:
    RQPF A 2 Bright A_Light1
    RQPF B 1 Bright A_Light1
    Goto LightDone
  Spawn:
    PIST A -1
    Stop
  }
}

