ACTOR ReliquaryFist : DoomWeapon
{
  Weapon.SelectionOrder 3700
  Weapon.Kickback 100
  Obituary "$OB_MPFIST"
  Tag "$TAG_FIST"
  +WEAPON.WIMPY_WEAPON
  +WEAPON.MELEEWEAPON
  States
  {
  Ready:
    PUNG A 1 A_WeaponReady
    Loop
  Deselect:
    PUNG AAA 0 A_Lower
    PUNG A 1 A_Lower
    Loop
  Select:
    PUNG AAA 0 A_Raise
    PUNG A 1 A_Raise
    Loop
  Fire:
    PUNG B 2
    PUNG C 0 A_Punch
    PUNG C 2 A_Punch
    PUNG D 9
    PUNG C 4
    PUNG B 5 A_ReFire
    Goto Ready
  }
}

