ACTOR ReliquaryChaingun : DoomWeapon
{
   Weapon.SelectionOrder 700
   Weapon.AmmoUse 1
   Weapon.AmmoGive 24
   Weapon.AmmoType "Clip"
   Inventory.PickupMessage "$GOTCHAINGUN" // "You got the chaingun"
   Obituary "$OB_MPCHAINGUN" // "%o was mowed down by %k's chaingun."
   Tag "$TAG_CHAINGUN"
   States
   {
   Ready:
     RCGG A 1 A_WeaponReady
     Loop
   Deselect:
     RCGG AAA 0 A_Lower
     RCGG A 1 A_Lower
     Loop
   Select:
     RCGG AAA 0 A_Raise
     RCGG A 1 A_Raise
     Loop
  Fire:
     RCGG A 0 A_PlaySound("reliquary/chngun", CHAN_WEAPON)
