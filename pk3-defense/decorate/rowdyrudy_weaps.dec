ACTOR RowdyRudyFists : DoomWeapon
{
  Weapon.SlotNumber 1
  Weapon.SelectionOrder 3700
  Weapon.Kickback 100
  Obituary "$OB_MPFIST"
  Tag "Fists"
  +WEAPON.WIMPY_WEAPON
  +WEAPON.MELEEWEAPON
  States
  {
  Ready:
    PUNC A 1 A_WeaponReady
    Loop
  Deselect:
    PUNC AAA 0 A_Lower
    PUNC A 1 A_Lower
    Loop
  Select:
    PUNC AAA 0 A_Raise
    PUNC A 1 A_Raise
    Loop
  Fire:
    PUNC B 1 
    PUNC CD 1 A_Punch
    PUNC D 1 
    PUNC CBA 2 
    PUNC EE 1 A_Punch
    PUNC F 3 
    PUNC E 2 
    PUNC A 2 A_ReFire
    Goto Ready
  }
}

ACTOR RowdyRudyChainsaw : DoomWeapon
{
  Weapon.SlotNumber 1
  Weapon.Kickback 0
