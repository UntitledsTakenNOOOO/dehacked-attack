}

ACTOR RowdyRudyRifle : DoomWeapon
{
  Weapon.SlotNumber 2
  Weapon.SelectionOrder 1900
  Weapon.AmmoUse 1
  Weapon.AmmoGive 20
  Weapon.AmmoType "Clip"
  Obituary "%o was gunned down by %k."
  +WEAPON.WIMPY_WEAPON
  Inventory.Pickupmessage "You got a rifle!"
  Tag "Rifle"
  States
  {
  Ready:
    RRRI A 1 A_WeaponReady
    Loop
  Deselect:
    RRRI AAA 0 A_Lower
    RRRI A 1 A_Lower
    Loop
  Select:
    RRRI AAA 0 A_Raise
    RRRI A 1 A_Raise
    Loop
  Fire:
    RRRI A 0 A_JumpIf(ACS_NamedExecuteWithResult("Dehacked_BalancedMode") == 1, "BalancedFire")
    RRRI A 0
    RRRI B 0 A_FireBullets(0, 0, 1, 5, "BulletPuff")
    RRRI B 0 A_PlaySound("rowdyrudy/pistol", CHAN_WEAPON)
    RRRI B 3 A_GunFlash
    RRRI A 2
    Goto Ready
  BalancedFire:
    RRRI A 0
    RRRI B 0 A_GunFlash("BalancedFlash")
    RRRI B 0 A_PlaySound("rowdyrudy/pistol", CHAN_WEAPON)
    RRRI B 2 A_FireBullets(0, 0, 1, 5, "BulletPuff")
    RRRI B 0 A_PlaySound("rowdyrudy/pistol", CHAN_WEAPON)
    RRRI B 2 A_FireBullets(0, 0, 1, 5, "BulletPuff")
    RRRI CDCBA 2
    Goto Ready
  Flash:
    RRRF A 2 Bright A_Light1
    Goto LightDone
  BalancedFlash:
    RRRF A 1 Bright A_Light1
    TNT1 A 1 Bright A_Light0
    RRRF A 1 Bright A_Light1
    Goto LightDone
  Spawn:
    PIST A -1
    Stop
  }
}

